block content

  pre(title="HTML")
    code.html.
      <button class="button" title="I am a button">Click me</button>
  pre.fragment(title="CSS")
    code.
      .button {
        font-family: 'Adelle SansW01', 'Arial', sans-serif;
        font-size: 0.75em;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        letter-spacing: 0.125em;
        display: inline-block;
        border: solid 2px #5f6258;
        border-radius: 100px;
        line-height: 1.25em;
        padding: 0.75em 1em;
        text-align: center;
      }
  img.fragment(src="img/button.png")

