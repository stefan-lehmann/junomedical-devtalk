.reveal
  font-family "Open Sans", Arial, sans-serif
  pre
    margin 20px auto !important
    code
      max-height 500px !important

.slides
  section
    height 100%
    img
      background none
      border none
      box-shadow none
      margin 0
      & + img
        padding-left 10px


  &__inner
    height 100%
    display flex
    flex-flow column nowrap
    align-items stretch

  pre[title]
    position relative
    &:before
      content attr(title)
      background #272822
      display block
      padding .2em .5em
      text-align right
      color #666
      position absolute
      right 0

.header
  flex 0 0 50px
  line-height 50px
  text-align left
  font-size 30px
  padding-bottom @height
  font-weight 600
  color #666
  border-bottom 1px solid @color!important
  &__title
    text-transform uppercase


.content
  flex-grow 2
  padding-top 40px!important

  ul
    margin-left 1em
    list-style-type none
    li
      position relative
      &:before
        position absolute
        content '-'
        left -.75em
        top 0

  &__inner
    position absolute
    left 0
    right 0
    top 50%
    transform translateY(-50%)
    max-height 100%

  &__chapter
    font-size 2em
    
  &__links
    text-align left
    font-size .65em

.image-block
  height 220px
  width 40%
  display inline-block
  font-size .5em
  font-weight bold
  padding 20px!important
  text-align left

  &__title
    padding-bottom .5em!important

  &__image
    width 100%
    height 200px
    position relative
    background #fff
    overflow hidden

    img
      position absolute
      left 50%
      top 45%
      transform translate(-50%, -50%)
      max-width 90%
      max-height 90%
      box-shadow none!important
